<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="px-8 py-6 mt-4 text-left bg-white shadow-lg">
        <h3 class="text-2xl font-bold text-center">Add a new post</h3>
        <form id="post-form">
            <div class="mt-4">
                <div>
                    <label class="block" for="title">Title<label>
                            <input id="post-title" type="text" placeholder="Enter title"
                                class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                </div>
                <div class="mt-4">
                    <label class="block">Description<label>
                            <textarea id="post-desc" type="text" placeholder="Please enter post description.."
                                class="w-full px-4 py-2 mt-2 border h-44 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600"></textarea>
                </div>
                <div class="flex items-baseline justify-between">
                    <button type="submit"
                        class="px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900">Post</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="./js/newPost.js"></script>