<div class="container mx-auto mt-6 font-mono">
    {{#each posts as |post| }}
    <div class="mb-5 w-full rounded overflow-hidden shadow-lg flex justify-between">
        <div class="px-6 py-4">
            <p class="font-bold underline underline-offset-2 text-xl mb-2">{{post.title}}</p>
            <p class="text-gray-700 text-base">{{post.description}}</p>
        </div>
        <div class="px-6 pt-4 pb-2">
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">{{post.user.username}}</span>
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">{{format_date post.createdAt}}</span>
        </div>
    </div>
    {{/each}}
</div>
