<!doctype html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Tech Blog</title>
</head>

<body>
  <header class="bg-gray-400">
    <nav class="flex items-center justify-between flex-wrap bg-teal p-6">
      <div class="flex items-center flex-no-shrink text-white mr-6">
        <a href="/" class="font-semibold text-4xl tracking-tight">Tech Blogs</a>
      </div>
      <div class="w-full block flex justify-between flex-grow lg:flex lg:items-center lg:w-auto">
        <section class="flex">
          <div class="text-sm lg:flex-grow">
            <a href="/dashboard" class="block mt-4 lg:inline-block lg:mt-0 text-teal-lighter hover:text-white mr-4">
              Dashboard
            </a>
          </div>
        </section>
        <section class="flex">
          {{#if logged_in}}
          <div>
            <a id="logout"
              class="cursor-pointer inline-block text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-teal hover:bg-blue-400 mt-4 lg:mt-0">
              Logout</a>
          </div>
         {{else}}
          <div>
            <a href="/login"
              class="inline-block text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-teal hover:bg-blue-400 mt-4 lg:mt-0">Login</a>
          </div> 
          {{/if}}
      </div>
      </section>
    </nav>
  </header>

  {{{ body }}}
  <script src="./js/logout.js"></script>
</body>

</html>